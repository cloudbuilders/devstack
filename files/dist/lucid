# Place lucid specific modifications here

if [[ "$ENABLED_SERVICES" =~ "q-svc" ]]; then
    # FIXME: perform a manual install of openvswitch
    echo "'q-svc' service is not available on lucid, as no packages exist for openvswitch"
    exit 1
fi

# Ensure add-apt-repository and easy_install is installed
apt_get install python-software-properties python-setuptools -y

# Upgrade to the latest version (so stack.sh can utilize --use-mirrors)
sudo easy_install pip

# Add the nightly nova builds 
# we do not install the nova packages, but the ppa contains dependancies needed by nova
sudo add-apt-repository ppa:nova-core/trunk

